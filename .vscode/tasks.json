{
   // See https://go.microsoft.com/fwlink/?LinkId=733558
   // for the documentation about the tasks.json format
   "version": "2.0.0",
   "tasks": [{
         "label": "clean",
         "type": "shell",
         "command": "psake.cmd '.\\psake.ps1' Clean",
         "group": "build"
      },
      {
         "label": "build",
         "type": "shell",
         "command": "psake.cmd '.\\psake.ps1' Default",
         "group": {
            "kind": "build",
            "isDefault": true
         }
      },
      {
         "label": "test",
         "type": "shell",
         "command": "psake.cmd '.\\psake.ps1' test",
         "group": {
            "kind": "test",
            "isDefault": true
         }
      },
      {
         "label": "build docs",
         "type": "shell",
         "command": "psake.cmd '.\\psake.ps1' build_docs",
         "group": "build"
      },
      {
         "label": "pack",
         "type": "shell",
         "command": "psake.cmd '.\\psake.ps1' pack",
         "group": "build"
      }
   ],

}